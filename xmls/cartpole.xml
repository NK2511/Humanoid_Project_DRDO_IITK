<?xml version="1.0" encoding="utf-8"?>
<mujoco model="cart_pole">

    <visual>
        <global offwidth="1280" offheight="720"/>
    </visual>

    <option gravity="0 0 -9.81">
    <flag energy="enable"/>
    </option>

    <worldbody>
        <camera name="fixed" pos="-0.220 -4.372 1.228" xyaxes="0.999 -0.050 0.000 0.014 0.270 0.963"/>
        <!-- Fixed base -->
        <body name="base" pos="0 0 0">
            <body name="cart" pos="0 0 0">
                <joint name="joint1" type="slide" axis="1 0 0" pos="0 0 0" limited="true" range ="-0.6 0.6" />
                <geom name="link1_geom" type="capsule" fromto="-0.1 0 0 0.1 0 0" size="0.07" rgba="1 0 0 1"/>

                <body name="pole" pos="0 0 0">
                    <joint name="joint2" type="hinge" axis="0 1 0" pos="0 0 0" limited="false"/>
                    <geom name="link2_geom" type="capsule"
                          fromto="0 0 0 0 0 0.5" size="0.03"/>


                </body>

            </body>

        </body>
    </worldbody>


    <keyframe>
    <key name="keyframe_1" qpos="0 0.1" qvel="0 0" />
    </keyframe>

    <!-- actuators -->
    <actuator>
        <motor name="a1" joint="joint1" ctrlrange="-100 100" />

    </actuator>

</mujoco>
