<?xml version="1.0" encoding="utf-8"?>
<mujoco model="double_pendulum">
    <visual>
        <global offwidth="1280" offheight="720"/>
    </visual>
    
    <option gravity="0 0 -9.81"/>

    <worldbody>
        <!-- Fixed base -->
        <body name="base" pos="0 0 0">

            <!-- First link -->
            <body name="link1" pos="0 0 0">
                <joint name="joint1" type="hinge" axis="0 1 0" pos="0 0 0" limited="false"/>
                <geom name="link1_geom" type="capsule" fromto="0 0 0 0 0 0.5" size="0.03"/>

                <!-- Second link -->
                <body name="link2" pos="0 0 0.5">
                    <joint name="joint2" type="hinge" axis="0 1 0" pos="0 0 0" limited="false"/>
                    <geom name="link2_geom" type="capsule"
                          fromto="0 0 0 0 0 +0.5" size="0.03"/>

                    <!-- Bob -->
                    <body name="bob2" pos="0 0 +0.5">
                        <geom name="bob2_geom" type="sphere"
                              size="0.2" density="1000" rgba="0 1 0 1"/>
                    </body>

                </body>

            </body>

        </body>
    </worldbody>


    <keyframe>
    <key name="keyframe_1" qpos="1.5707963267948966 0" qvel="0 0" />
    </keyframe>


    <!-- Optional actuators -->
    <actuator>
        <!-- <motor name="a1" joint="joint1" ctrlrange="-5 5" /> -->
        <!-- <motor name="a2" joint="joint2" ctrlrange="-5 5" /> -->
    </actuator>

</mujoco>
